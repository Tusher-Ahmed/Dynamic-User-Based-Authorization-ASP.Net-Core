@model DynamicRoleWeb.ViewModels.MenuViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row pb-3">
    <div class="col-6">
        <h4>Menu</h4>
    </div>
    <div class="col-6 text-end">
        @Html.ActionLink("Show menus", "ShowMenus", "UserMenu", null, new { @class = "btn btn-success" })
    </div>
</div>

@using (Html.BeginForm("AddMenu", "UserMenu", new { area = "Administrator" }, FormMethod.Post))
{


    <div class="form-group">
        @Html.LabelFor(model => model.ActionName, new { @class = "col-form-label" })
        @Html.DropDownListFor(model => model.ActionId, ViewData["Actions"] as SelectList, "--Select--", new { @class = "form-select col-md-6" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.DisplayName, new { @class = "col-form-label" })
        @Html.EditorFor(model => model.DisplayName, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ParentName, new { @class = "col-form-label" })
        @Html.DropDownListFor(model => model.ParentsId, ViewData["Parent"] as SelectList, "--Select--", new { @class = "form-select col-md-6" })
    </div>

    <div class="form-group pt-2">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
}