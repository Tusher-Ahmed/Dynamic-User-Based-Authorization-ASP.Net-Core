@model List<DynamicRoleWeb.ViewModels.MenuViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row pb-3">
    <div class="col-6">
        <h4>Menu With It's Parent Menu</h4>
    </div>
    <div class="col-6 text-end">
        @Html.ActionLink("Go Back", "Getmenu", "UserMenu", null, new { @class = "btn btn-success" })
    </div>
</div>
<table class="table table-striped table-hover text-center">
    <thead>
        <tr>
            <th>sl</th>
            <th>Action Name</th>
            <th>Parent Name</th>
            <th>Display Name</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
        }
        @foreach(var item in Model)
        {
            <tr>
                <td>@i</td>
                <td>@item.ActionName</td>
                <td>@(item.ParentName != "" ? item.ParentName : "_")</td>
                <td>@item.DisplayName</td>
            </tr>
        }
    </tbody>
</table>